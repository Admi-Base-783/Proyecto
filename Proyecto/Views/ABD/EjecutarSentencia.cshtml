<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejecutar Sentencia SQL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #4F759B;
            color: #fff;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .container {
            max-width: 1100px; /* Contenedor más amplio */
            margin: 30px auto;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 30px;
            animation: fadeIn 1s ease-in-out;
            color: #333;
        }


        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        h3 {
            text-align: center;
            color: #4CAF50;
            margin-bottom: 20px;
            animation: slideIn 1s ease-in-out;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }

        .btn-primary, .btn-secondary {
            font-size: 1rem;
            padding: 10px 20px;
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #4CAF50;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #45a049;
            }

        .btn-secondary {
            background-color: #00bcd4;
            color: #fff;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

            .btn-secondary:hover {
                background-color: #0099b9;
            }

        textarea {
            width: 1900px; /* Ajusta el ancho deseado */
            height: 200px; /* Ajusta la altura deseada */
            resize: both; /* Permite redimensionar en ambos sentidos */
            overflow: auto; /* Asegura que el contenido desplazable tenga scroll */
            border: 1px solid #ccc; /* Agrega un borde para mejor visualización */
            padding: 10px; /* Añade espacio interno */
            border-radius: 5px; /* Es opcional, pero mejora la apariencia */
        }


            textarea:focus {
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
                border-color: #4CAF50;
            }

        .result-container {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            overflow-x: auto;
            animation: fadeIn 1s ease-in-out;
        }

            .result-container h4 {
                color: #333;
                margin-bottom: 15px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th, table td {
                text-align: left;
                padding: 10px;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #4CAF50;
                color: white;
            }

        .alert {
            padding: 15px;
            border-radius: 10px;
            margin-top: 20px;
            animation: fadeIn 1s ease-in-out;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }

        button[type="submit"] {
            font-size: 1.2rem;
            width: 100%;
            margin-top: 20px;
            border-radius: 8px;
            transition: background-color 0.3s ease-in-out;
        }

            button[type="submit"]:hover {
                background-color: #3e8e41;
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <h3><i class="fas fa-terminal"></i> Ejecutar Sentencia SQL</h3>
        <a href="@Url.Action("Opciones", "ABD")" class="btn btn-secondary mb-3"><i class="fas fa-arrow-left"></i> Anterior</a>



        <!-- Mostrar mensaje de éxito o error -->
        @if (TempData["Message"] != null)
        {
            var messageType = TempData["MessageType"]?.ToString(); // "success" o "error"
            var alertClass = messageType == "success" ? "alert-success" : "alert-danger";
            <div class="alert @alertClass" role="alert">
                @TempData["Message"]
            </div>
        }

        <!-- Formulario para la consulta SQL -->
        <form method="post">
            <div class="form-group">
                <label for="Query">Consulta SQL:</label>
                <textarea id="Query" name="Query" class="form-control" rows="5">@Model.Query</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Ejecutar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <h4>Resultado:</h4>
            <div>@Html.Raw(Model.Result)</div>
        }
